{
  "name": "react-postgraphile",
  "version": "0.3.0",
  "private": true,
  "description": "Experiment with Postgraphile and React",
  "license": "MIT",
  "dependencies": {
    "@xstate/react": "^0.7.1",
    "emotion": "^10.0.14",
    "graphql": "^14.4.2",
    "graphql.js": "0.6.1",
    "hookrouter": "^1.2.3",
    "js-cookie": "^2.2.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "roughjs": "^3.1.0",
    "use-query-params": "^0.3.3",
    "xstate": "^4.6.7"
  },
  "scripts": {
    "tailwind": "tailwind build ./src/index.tailwind.css -c ./tailwind.config.js -o ./src/index.css",
    "start": "yarn tailwind && react-scripts start",
    "build": "yarn tailwind && react-app-rewired build",
    "eject": "react-scripts eject",
    "lint": "eslint --ext js,ts,tsx src",
    "postgraphile": "postgraphile --connection postgres://localhost:5432/react_postgraphile --schema react_postgraphile --token react_postgraphile.jwt_token --default-role react_postgraphile_anonymous --secret your_secret --cors",
    "test": "react-scripts test --env=jsdom --testPathIgnorePatterns='.*\\.e2e\\.ts'",
    "e2e": "jest -c jest-e2e.config.js",
    "types:gen": "graphql-codegen"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^1.5.0",
    "@graphql-codegen/cli": "^1.5.0",
    "@graphql-codegen/typescript": "^1.5.0",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.1.4",
    "@types/hookrouter": "^2.2.1",
    "@types/jest": "^24.0.17",
    "@types/js-cookie": "^2.2.2",
    "@types/node": "^12.7.1",
    "@types/react": "^16.8.25",
    "@types/react-dom": "^16.8.5",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "@xstate/test": "^0.1.0",
    "babel-plugin-import-graphql": "^2.7.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-config-react-app": "^5.0.1",
    "eslint-plugin-prettier": "^3.1.0",
    "glob-all": "^3.1.0",
    "graphql.macro": "^1.4.2",
    "jest-fetch-mock": "^2.0.0",
    "jest-puppeteer": "^4.3.0",
    "postgraphile": "^4.4.2",
    "puppeteer": "^1.19.0",
    "purgecss": "^1.3.0",
    "purgecss-webpack-plugin": "^1.5.0",
    "react-app-rewired": "^2.1.3",
    "react-scripts": "^3.0.1",
    "tailwindcss": "^1.1.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "prettier": {
    "jsxSingleQuote": true,
    "singleQuote": true,
    "semi": false
  }
}
